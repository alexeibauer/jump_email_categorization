# GCP Configuration
GCP_PROJECT_ID=jump-email-app
GCP_REGION=us-central1

# Application Secrets
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=CHANGE_THIS_TO_GENERATED_SECRET

# Database (from setup-database.sh output)
DATABASE_URL=ecto://jump_app_user:PASSWORD@/jump_email_categorization_prod?host=/cloudsql/PROJECT:REGION:INSTANCE

# Application Host (get this from first deployment)
PHX_HOST=your-service-name-xxxxx-uc.a.run.app

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OpenAI API (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SMTP Configuration
# Option 1: SendGrid
SMTP_RELAY=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Option 2: Gmail
# SMTP_RELAY=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-16-char-app-password

# Database Pool Size
POOL_SIZE=2

